@model IEnumerable<Dominio.Proyecto>

@{
    ViewBag.Title = "Filtrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Filtrar</h2>

<form method="post" action="/Admin/Filtrar">
    <div class="form-group">
        <label for="formGroupExampleInput">Cédula</label>
        <input type="text" class="form-control" name="cedula" id="cedula"  placeholder="Ingrese la Cédula">
        <label for="formGroupExampleInput">Fecha</label>
        <input type="text" class="form-control" name="fecha" id="fecha"  placeholder="Ingrese la fecha de Solicitud">
        <label for="formGroupExampleInput">Estado</label>
        <input type="text" class="form-control" name="estado" id="estado"  placeholder="Ingrese el Estado ">
        <label for="formGroupExampleInput">Título y/o Descripción</label>
        <input type="text" class="form-control" name="texto" id="texto"  placeholder="Ingrese Texto a Buscar">


        <input type="submit" class="btn btn-black" id="btnFiltrar" value="Buscar" />
    </div>
    
</form>
@if (Model != null)
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.monto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cuotas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.rutaImagen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaPresentacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.puntaje)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tasaInteres)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.monto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cuotas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.rutaImagen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaPresentacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.puntaje)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tasaInteres)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
            @Html.ActionLink("Details", "Details", new { id = item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.id })
        </td>
    </tr>
}

</table>
}