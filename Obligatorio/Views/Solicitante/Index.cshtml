@model IEnumerable<Dominio.Proyecto>

@{
    ViewBag.Title = "ProyectosDeUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mis proyectos</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.monto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cuotas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.rutaImagen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaPresentacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.puntaje)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tasaInteres)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cuotas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rutaImagen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaPresentacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.puntaje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tasaInteres)
            </td>
            <td>
               
                <a href="/Proyecto/Details?id=@item.id">Detalles</a>
               
            </td>
        </tr>
    }

</table>
